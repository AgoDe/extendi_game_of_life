<div class="w-full text-center mb-4">
  <h1 class="text-2xl font-bold mb-4">Game of Life</h1>
</div>

<div class="w-full text-center mb-4">
    <% if !user_signed_in? %>
        <p class="text-gray-600 mb-4 italic">Per poter giocare, devi prima effettuare il login.</p>
        <%= render "devise/sessions/form", resource: User.new, resource_name: :user, devise_mapping: Devise.mappings[:user] %>
    <% else %>
        <h2 class="text-xl mb-4">Benvenuto, <%= current_user.email %>! Ã¨ il momento di giocare!</h2>
        
        <!-- Form per il caricamento del file -->
        <div class="max-w-md mx-auto mt-6">
          <%= form_with url: start_game_path, multipart: true, local: true, class: "space-y-4" do |form| %>
            <div>
              <%= form.label :file, "Carica file di configurazione (.txt):", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.file_field :file, accept: ".txt", required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <p class="text-xs text-gray-500 mt-1">Solo file .txt, max 1MB</p>
            </div>
            
            <div>
                <%= form.submit "Inizia Gioco", class: "w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md transition duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
            </div>

            
          <% end %>
        </div>
        
        <p class="text-gray-600 mt-4">
            Se invece vuoi eseguire il logout,
            <%= link_to "clicca qui", destroy_user_session_path, 
                data: { "turbo-method": :delete },
                class: "italic inline-block font-bold px-4 rounded-md transition duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>  
        </p>
    <% end %>
</div>
